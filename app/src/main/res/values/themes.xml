<resources>
    <!-- Base application theme. -->
    <style name="HobbyistActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="android:actionOverflowButtonStyle">@style/HobbyistActionButtonOverflow</item>

        <item name="actionOverflowButtonStyle">@style/HobbyistActionButtonOverflow</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="actionBarSize">@dimen/action_bar_height</item>
