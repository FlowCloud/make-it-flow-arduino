<resources>

    <style name="DefaultAndroidStyle">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="HobbyistActivityStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SlidingDrawer">
        <item name="android:background">@color/nice_purple</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:cacheColorHint">#00000000</item>
    </style>

    <style name="ConfigureWifiRadioButtonStyle">
        <item name="android:background">@drawable/white_pink_selector</item>
        <item name="android:textColor">@drawable/gray_pink_text_color_selector</item>
        <item name="android:textSize">@dimen/toggle_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
    </style>

    <style name="InteractiveModeRadioButtonStyle">
        <item name="android:background">@drawable/interactive_mode_radio_button_selector</item>
        <item name="android:textColor">@drawable/interactive_mode_text_color_selector</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@null</item>
    </style>


    <style name="RoundedEditText">
        <item name="android:textSize">@dimen/rounded_edit_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:background">@drawable/stroke_shape</item>
    </style>

    <style name="HobbyistFragmentStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/navigation_drawer_fragment_layout_margin</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="HobbyistHelpFragmentStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="DeviceDetailValue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DeviceDetailText" parent="DeviceDetailValue">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/device_detail_gray</item>
    </style>

    <style name="SetupGuideText">
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/very_small_label_text_size</item>
        <item name="android:textColor">@color/nice_dark_gray</item>
    </style>

    <style name="SetupGuideTextWithPadding" parent="SetupGuideText">
        <item name="android:padding">10dp</item>
    </style>

    <style name="SetupGuideTextCentered" parent="SetupGuideTextWithPadding">
        <item name="android:gravity">center</item>
    </style>

    <style name="Link">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/link_text_color_selector</item>
        <item name="android:textSize">@dimen/lint_text_size</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Dots">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConnectingTextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/connecting_text_size</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
