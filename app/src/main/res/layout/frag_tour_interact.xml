<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="25dp"
    >

    <TextView
        android:id="@+id/makeItFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_it_flow"
        android:textSize="@dimen/title_text_size"
        android:padding="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interact_with_your_device"
        android:padding="10dp"
        android:textSize="@dimen/label_text_size"
        android:gravity="center"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tour_interact_image"
            android:paddingBottom="25dp"
            />

        <Button
            android:id="@+id/letsGetStarted"
            android:layout_height="@dimen/button_height"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:text="@string/lets_get_started_button_text"
            android:background="@drawable/green_button_selector"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />

    </RelativeLayout>


</LinearLayout>